{
  "name": "twitch-ebs-tools",
  "version": "2.0.4",
  "description": "Utility functions for Twitch Extension Backend Services (EBS)",
  "keywords": [
    "twitch",
    "extension",
    "tools",
    "ebs",
    "backend",
    "jwt"
  ],
  "homepage": "https://github.com/lukemnet/twitch-ebs-tools#readme",
  "bugs": {
    "url": "https://github.com/lukemnet/twitch-ebs-tools/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukemnet/twitch-ebs-tools.git"
  },
  "license": "MIT",
  "author": {
    "name": "Łukasz Wójcik",
    "url": "https://www.lukem.net/"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "browser": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "npm run lint && npm run checkFormat && npm run test && npm run clean && npm run compile",
    "checkFormat": "prettier --check .",
    "clean": "rimraf dist/*",
    "clearTestCache": "jest --clearCache",
    "compile": "rollup -c",
    "dev": "tsc -w",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": "sort-package-json",
    "*.ts": [
      "eslint --fix",
      "prettier --write ."
    ]
  },
  "dependencies": {
    "jsonwebtoken": "^8.5.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.4",
    "@types/jsonwebtoken": "^8.5.8",
    "esbuild": "^0.14.14",
    "eslint": "^8.8.0",
    "eslint-config-lukemnet": "^1.0.1",
    "husky": "^7.0.4",
    "jest": "^28.0.0",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.66.1",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-esbuild": "^4.8.2",
    "rollup-plugin-external-globals": "^0.6.1",
    "sort-package-json": "^1.54.0",
    "ts-jest": "^28.0.2",
    "typescript": "^4.5.5"
  }
}
